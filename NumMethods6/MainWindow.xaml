<Window x:Class="NumMethods6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumMethods6"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:dataGrid2D="http://gu.se/DataGrid2D"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="620" DataContext="{Binding Source={StaticResource Locator},Path=Main}">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <oxy:Plot Title="{Binding Locale[#Plot],FallbackValue=Plot}"
                  IsLegendVisible="True" LegendTitle="Legend" LegendOrientation="Horizontal"
                  LegendPlacement="Inside" LegendPosition="TopRight" LegendBackground="Transparent"
                  LegendBorder="Transparent" LegendMaxWidth="110" LegendMargin="10" LegendFontSize="12">
            <oxy:Plot.Series>
                <oxy:LineSeries Title="{Binding Locale[#AccurateLineSeries],FallbackValue=Comp}" ItemsSource="{Binding ComparisionDataPoints}"
                                Smooth="True" />
                <oxy:LineSeries Title="{Binding Locale[#ApproxLineSeries],FallbackValue=Diff}" ItemsSource="{Binding DifferentialDataPoints}"
                                Smooth="True" />
            </oxy:Plot.Series>
        </oxy:Plot>
        <Grid Grid.Row="1" Background="#e6e6e6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="5">
                <ComboBox ItemsSource="{Binding AvailableFunctions}" MinWidth="100"
                      SelectedItem="{Binding CurrentlySelectedFunction,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Top"
                      Margin="10,5,10,10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TextRepresentation}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="{Binding Locale[#ToX],FallbackValue=Step}" />
                <TextBox TextAlignment="Center" Text="{Binding IntegrationStepBind,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                
                <TextBlock Text="{Binding Locale[#ToX],FallbackValue=Degree}" />
                <TextBox TextAlignment="Center" Text="{Binding DiffDegreeBind,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <Grid Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <DataGrid Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" HeadersVisibility="None"
                      CanUserAddRows="True"
                      dataGrid2D:ItemsSource.Array2D="{Binding ConstMatrix}" />                
                <DataGrid x:Name="VarGrid" Grid.Column="1" Margin="10,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" HeadersVisibility="None"
                      CanUserAddRows="True"
                      dataGrid2D:ItemsSource.Array2D="{Binding VariableMatrix}" />
            </Grid>
            <Button Margin="0,5" Content="Do maths" Command="{Binding DoMathsCommand}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" MinWidth="200"/>

        </Grid>

    </Grid>
</Window>
