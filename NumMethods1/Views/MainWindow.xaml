<Window x:Class="NumMethods1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumMethods1"
        xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5">
            <TextBlock Text="Select desired function:" HorizontalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding AvailableFunctions}" SelectedItem="{Binding FunctionSelectorSelectedItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Stretch">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding TextRepresentation}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="From X:" HorizontalAlignment="Center"/>
                    <TextBox Text="{Binding FromXValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Center"
                             HorizontalAlignment="Center" Width="30"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="To X:" HorizontalAlignment="Center"/>
                    <TextBox Text="{Binding ToXValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Center"
                             HorizontalAlignment="Center" Width="30"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Max Iterations:" HorizontalAlignment="Center"/>
                    <TextBox Text="{Binding MaxIterValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Center"
                             HorizontalAlignment="Center" Width="70"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <charting:Chart Grid.Row="1">
            <charting:LineSeries
                ItemsSource="{Binding ChartData}" 
                DependentValueBinding="{Binding Path=Value}" 
                IndependentValueBinding="{Binding Path=Key}">
            </charting:LineSeries>
        </charting:Chart>

    </Grid>
</Window>